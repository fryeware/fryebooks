@model IEnumerable<Fryebooks.Models.Income>

@{
    ViewBag.Title = "Income";
}

<h2>All Income</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PayDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GrossPayment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PayDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GrossPayment)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
